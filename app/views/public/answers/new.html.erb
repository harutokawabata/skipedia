<div class="container">
    <div class="row question-box">
      <div class="question-box-text">
        <h4 class="question-midashi"><%= @question.tag.genre.name %>に関する質問です</h4>
        <!--<i class="far fa-question-circle"></i>-->
        <div class="tag">
        <p><%= @question.tag.name %></p>
        </div>
        <p><%= @question.title %></p>
      </div>
    </div>
</div>

<div class="container user-sign-in">
    <div class="row form-title">
        <h3>回答する</h3>
    </div>
    <%= alert %>
    <%= form_with model:@answer, url:answers_path, class:"form-horizontal", local:true do |f| %>
    <div class="row user-sign-in">
      <%= f.text_area :introduction, placeholder: "説明文", class:"textarea" %>
    </div>
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12">
          <%= f.text_field :link, placeholder: "参考リンク" %>
          <%= f.hidden_field :question_id, :value => @question.id %>
        </div>
      </div>
    </div>
        <%= f.submit "投稿する", class:"btn btn-secondary btn btn-lg w-80"%>
   <% end %>
</div>