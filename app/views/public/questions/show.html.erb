<div class="container">
  　<h3 class="midashi3">質問詳細ページ</h3>
    <div class="row c-toparea">
      <% if @question.is_active == "f" %>
          <P>未回答の質問です</p>
      <% elsif @question.is_active == "t" %>
          <p>回答が<%= @question.answers.count %>件あります！</p>
      <% end %>
    </div>
    <div class="row question-box">
      <div class="question-box-text">
        <h4 class="question-midashi"><%= @question.tag.genre.name %>に関する質問です</h4>
        <!--<i class="far fa-question-circle"></i>-->
        <div class="tag">
          <i class="fas fa-tags"><%= @question.tag.name %></i>
        </div>
        <p><%= @question.title %></p>
      </div>
    </div>
    <div class="row question-btn" style="text-align:center;">
    <% if user_signed_in? %>
      <%= link_to '回答する', new_answer_path(@question.id), class:"btn btn-primary c-btn" %>
    <% else %>
      <%= link_to '会員登録して回答する', new_user_registration_path, class:"btn btn-danger" %>
    <% end %>
  <!--#引数を@questionにしてrootingを/answers/:id/newにしたら上手くパスはとおった-->
    </div>
  <h4 class="midashi4">この質問に対する回答一覧</h4>
  <% @question.answers.each do |answer| %>
  <% if answer.present? %>
    <div class="row">
      <div class="timeline">
        <div class="col-lg-2 image-image">
          <p class="text-center"><%= answer.user.name %>さん</p>
          <div class="image-image-image">
            <i class="fas fa-user-circle fa-3x"></i>
          </div>
        </div>
        <div class="col-lg-8 post-text-area">
          <ul class="ppp">
            <li>投稿日:<%= l answer.created_at, format: :short %></li>
          </ul>
          <div class="post-introduction-area">
            <%= answer.introduction.truncate(60, omission: '...') %>
          </div>
        </div>
        <div class="col-lg-2 post-info-area">
          <ul>
            <li><i class="fas fa-folder"></i><%= answer.question.tag.genre.name %><br></li>
            <li><i class="fas fa-tags"></i><%= answer.question.tag.name %><br></li>
            <% if user_signed_in? %>
            <li>
              <div class="c-delete">
                <% if current_user.id == answer.question.user_id %>
                  <%= link_to answer_path(answer.id), :method => :delete do %>
                    <i class="fas fa-trash-alt c-delete-icon"></i>
                  <% end %>
                <% end %>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
      </div>
   <% else %>
     <p>回答募集中です！</p>
   <% end %>
   <% end %>
</div>