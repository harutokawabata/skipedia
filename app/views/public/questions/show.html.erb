<div class="container">
    <div class="row question-toparea">
      <% if @question.is_active =  false %>
          <P>回答済みの質問です</p>
      <% else %>
          <p>未回答です</p>
      <% end %>
    </div>
    <div class="row question-box">
      <div class="question-box-text">
        <h4 class="question-midashi"><%= @question.tag.genre.name %>に関する質問です</h4>
        <!--<i class="far fa-question-circle"></i>-->
        <div class="tag">
        <p><%= @question.tag.name %></p>
        </div>
        <p><%= @question.title %></p>
      </div>
    </div>
</div>
<br>
<div class="row">
  <p>質問に対して誰でも回答できます。</p>
</div>
<div class="container user-sign-in">
 <div class="row form-title">
   <h3>回答する</h3> 
 </div> 
  <%= alert %>
 <%# form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <%= form_with model:@post, url:posts_path, class:"form-horizontal", local:true do |f| %>
    <%# render "users/shared/error_messages", resource: resource %>
    <div class="row-user-sign-in">
      <div class="field">
        <p><%= @question.title %>に答える</p>
      </div>
    </div>
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12">
          <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "タイトル", class:'fa' %>
        </div>
      </div>
    </div>
    
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12 dropdown">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
        </div>
      </div>
    </div>
    
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12 dropdown">
          <%= f.collection_select :tag_id, Tag.all, :id, :name, include_blank: "選択してください" %>
        </div>
      </div>
    </div>
    
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12">
          <%= f.text_area :introduction, placeholder: "説明文", class:"textarea" %>
        </div>
      </div>
    </div>
    
    <div class="row user-sign-in">
      <div class="field">
        <div class="col-xs-12">
          <%= f.text_field :link, placeholder: "参考リンク" %>
        </div>
      </div>
    </div>


  <div class="row user-links">
    <%= f.submit "投稿する", class:"btn btn-secondary btn btn-lg w-80"%>
   <% end %>