<%= form_with model: @user, url: users_path do |f| %>
<div class="container">
  <h2>登録情報編集</h2>
  <div class="row">
    <div class="col-xs-3">
      <div class="field">
        <%= f.label :"名前" %>
        <%= f.text_field :name, autofocus: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <div class="field">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email, autofocus: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
     <div class="actions">
      <%= f.submit "編集内容を保存する", method: :patch %>
     </div>
    </div>
  <% end %>
  </div>
</div>
