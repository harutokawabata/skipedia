<div class="container">
    <h3>ユーザー一覧</h3>
    <div class="row">
        <table class="table table-bordered">
        	<thead>
        		<tr>
        			<th>会員ID</th>
        			<th>ユーザー名</th>
        			<th>投稿数</th>
        			<th>質問数</th>
        			<th>ステータス</th>
        			<th>編集削除</th>
        		</tr>
        	</thead>
        	<tbody>
        	    <% @users.each do |user| %>
        		<tr>
        			<th><%= user.id %></th>
        			<td><%= user.name %></td>
        			<td>投稿数未実装</td>
        			<td>質問数未実装</td>
        			<td><%= user.is_deleted %></td>
        			<td>
        			    <%= link_to '詳細', admins_user_path(user.id), method: :get %> 
        			</td>
        		</tr>
        		<% end %>
        	</tbody>
        </table>
    </div>
</div>
