<div class="container">
    <%= form_with model:@post_image, url:admins_post_images_path, local:true do |f| %>
    <div class="row">
        <div class="col-sm-12">
            <%= f.attachment_field :image %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <label>名前</label>
            <%= f.text_field :name %>
        </div>
        <div class="col-sm-6">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <%= f.text_area :introduction, placeholedr:"ここに詳細記載" %>
        </div>
    </div>
    <hr>
    <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
</div>